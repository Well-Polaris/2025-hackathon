{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bun",
            "request": "launch",
            "name": "Debug main.ts via bun",
            "program": "${workspaceFolder}/src/main.ts",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "watchMode": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Netlify Functions",
            "program": "${workspaceFolder}/node_modules/netlify-cli/bin/run",
            "args": [
                "dev"
            ],
            "runtimeArgs": [
                "--inspect"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}